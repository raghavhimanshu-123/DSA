class Solution {
public:
    void duplicateZeros(vector<int>& arr) {
        vector<int> ans;

        int i = 0;
        while(i < arr.size()) {
            if(arr[i] == 0) {
                ans.push_back(0);
            }
            ans.push_back(arr[i]);
            i++;
        }

        for(int i=0; i<arr.size(); i++) {
            arr[i] = ans[i];
        }
    }
};
